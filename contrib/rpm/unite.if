
## <summary>policy for unite</summary>


########################################
## <summary>
##	Transition to unite.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`unite_domtrans',`
	gen_require(`
		type unite_t, unite_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, unite_exec_t, unite_t)
')


########################################
## <summary>
##	Execute unite server in the unite domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`unite_initrc_domtrans',`
	gen_require(`
		type unite_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, unite_initrc_exec_t)
')


########################################
## <summary>
##	Search unite lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`unite_search_lib',`
	gen_require(`
		type unite_var_lib_t;
	')

	allow $1 unite_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

